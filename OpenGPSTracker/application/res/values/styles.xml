<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.NoBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.Sherlock.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MYTHEME.ActionBarStyle</item>
        <item name="actionBarStyle">@style/MYTHEME.ActionBarStyle</item>
        <item name="android:buttonStyle">@style/AppButtonTheme</item>
    </style>

    <!-- Application theme. -->
    <style name="AppNoTitleTheme" parent="Theme.Sherlock.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:buttonStyle">@style/AppButtonTheme</item>
    </style>

    <style name="MYTHEME.ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MYTHEME.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/MYTHEME.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="AppButtonTheme" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">@color/logo_dark</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/custom_button</item>
       <item name="android:padding">10dip</item>
   </style>
    
    <style name="MYTHEME.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/logo_color</item>
    </style>

    <style name="dashboard">
        <item name="android:background">#d8d9de</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/logo_dark</item>
        <item name="android:background">@null</item>
    </style>

    <style name="FooterBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#dedede</item>
    </style>

    <style name="Table">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:stretchColumns">1</item>
        <item name="android:background">@color/logo_dark</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>

    <style name="TableRow">
        <item name="android:layout_margin">1dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/logo_dark</item>
    </style>

    <style name="TableHeaderRow" parent="TableRow"></style>
    
    <style name="TableRowView">
        <item name="android:layout_margin">1dip</item>
        <item name="android:padding">10dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TableRowTextView" parent="TableRowView">
    </style>

    <style name="TableRowTextViewFooter" parent="TableRowTextView">
        <item name="android:background">@color/logo_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TableHeaderRowTextView" parent="TableRowTextView">
        <item name="android:background">@color/logo_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TableRowImageView" parent="TableRowView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">70dip</item>
        <item name="android:maxWidth">70dip</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
    <style name="TableHeaderRowImageView" parent="TableRowImageView">
        <item name="android:background">@color/logo_color</item>
    </style>
    
    <style name="ParagraphTextView">
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textColor">@color/logo_dark</item>
    </style>
    
    <style name="ParagraphImageView">
        <item name="android:adjustViewBounds">true</item>        
        <item name="android:scaleType">centerCrop</item>        
    </style>
    
    <style name="ParagraphImageViewVertical" parent="ParagraphImageView">
        <item name="android:maxHeight">200dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ParagraphImageViewHorizontal" parent="ParagraphImageView">
        <item name="android:maxWidth">150dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="ParagraphImageViewVertical" parent="ParagraphImageView">
        <item name="android:maxHeight">200dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>