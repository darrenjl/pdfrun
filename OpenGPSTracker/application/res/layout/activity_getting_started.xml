<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GettingStartedActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            style="@style/ParagraphImageViewVertical"
            android:src="@drawable/pat2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TextView
                style="@style/ParagraphTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/getting_started_opening_text" />

            <TextView
                style="@style/ParagraphTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/getting_started_noobs" />

            <!-- <Button -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:onClick="goToTrainingPlan" -->
            <!-- android:text="@string/getting_started_noobs_btn" /> -->

            <TextView
                style="@style/ParagraphTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/getting_started_experienced" />

            <!-- <Button -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:onClick="goToGoals" -->
            <!-- android:text="@string/getting_started_experienced_btn" /> -->

            <TextView
                style="@style/ParagraphTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/getting_started_gps" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>