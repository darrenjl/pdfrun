    <Button
        android:id="@+id/btn_profile"
        style="@style/DashboardButton"
        android:drawableTop="@drawable/btn_groups"
        android:text="Profile" />
	
    <Button
        android:id="@+id/btn_about"
        style="@style/DashboardButton"
