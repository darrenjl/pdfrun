<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RunDetailsActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableLayout style="@style/Table" >

            <TableRow style="@style/TableRow" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/stat_date" />

                <TextView
                    android:id="@+id/stat_date"
                    style="@style/TableRowTextView" />
            </TableRow>
            
            <TableRow style="@style/TableRow" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/stat_time" />

                <TextView
                    android:id="@+id/stat_time"
                    style="@style/TableRowTextView" />
            </TableRow>
            
            <TableRow style="@style/TableRow" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/stat_distance" />

                <TextView
                    android:id="@+id/stat_distance"
                    style="@style/TableRowTextView" />
            </TableRow>

            <TableRow style="@style/TableRow" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/stat_averagespeed" />

                <TextView
                    android:id="@+id/stat_averagespeed"
                    style="@style/TableRowTextView" />
            </TableRow>

            <TableRow style="@style/TableRow" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/stat_maximumspeed" />

                <TextView
                    android:id="@+id/stat_maximumspeed"
                    style="@style/TableRowTextView" />
            </TableRow>

            <TableRow style="@style/TableRow" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/stat_duration" />

                <TextView
                    android:id="@+id/stat_elapsedtime"
                    style="@style/TableRowTextView" />
            </TableRow>

            <TableRow
                android:id="@+id/km_1_table_row"
                style="@style/TableRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/time_1km" />

                <TextView
                    android:id="@+id/km_1_time"
                    style="@style/TableRowTextView" />
                
                <ImageView
                    android:id="@+id/image_1km"
                    style="@style/TableRowImageView"
                    android:src="@drawable/ic_launcher" />
            </TableRow>

            <TableRow
                android:id="@+id/km_3_table_row"
                style="@style/TableRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/time_3km" />

                <TextView
                    android:id="@+id/km_3_time"
                    style="@style/TableRowTextView" />
                
                <ImageView
                    android:id="@+id/image_3km"
                    style="@style/TableRowImageView"
                    android:src="@drawable/ic_launcher" />
            </TableRow>

            <TableRow
                android:id="@+id/km_5_table_row"
                style="@style/TableRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/time_5km" />

                <TextView
                    android:id="@+id/km_5_time"
                    style="@style/TableRowTextView" />
                
                <ImageView
                    android:id="@+id/image_5km"
                    style="@style/TableRowImageView"
                    android:src="@drawable/ic_launcher" />
            </TableRow>

            <TableRow
                android:id="@+id/km_8_table_row"
                style="@style/TableRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/time_8km" />

                <TextView
                    android:id="@+id/km_8_time"
                    style="@style/TableRowTextView" />
                
                <ImageView
                    android:id="@+id/image_8km"
                    style="@style/TableRowImageView"
                    android:src="@drawable/ic_launcher" />
            </TableRow>

            <TableRow
                android:id="@+id/km_10_table_row"
                style="@style/TableRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/time_10km" />

                <TextView
                    android:id="@+id/km_10_time"
                    style="@style/TableRowTextView" />
                
                <ImageView
                    android:id="@+id/image_10km"
                    style="@style/TableRowImageView"
                    android:src="@drawable/ic_launcher" />
            </TableRow>

            <TableRow style="@style/TableRow" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/stat_ascension" />

                <TextView
                    android:id="@+id/stat_ascension"
                    style="@style/TableRowTextView" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/fromRecording"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:visibility="gone" 
            android:gravity="center">

            <Button
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToDashboard"
                android:text="@string/home_btn" 
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/profileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToProfile"
                android:text="@string/profile_btn" 
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>