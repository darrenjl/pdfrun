<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RunDetailsActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingRight="15dp"
            android:text="@string/stat_distance" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/stat_distance" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingRight="15dp"
            android:text="@string/stat_averagespeed" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/stat_averagespeed" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingRight="15dp"
            android:text="@string/stat_maximumspeed" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/stat_maximumspeed" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingRight="15dp"
            android:text="@string/stat_elapsedtime" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/stat_elapsedtime" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>
    
    <TableRow
        android:id="@+id/km_1_table_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:visibility="gone">

        <TextView
            android:paddingRight="15dp"
            android:text="Time for 1km" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/km_1_time" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>
    
    <TableRow
        android:id="@+id/km_3_table_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:visibility="gone">

        <TextView
            android:paddingRight="15dp"
            android:text="Time for 3km" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/km_3_time" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>
    
    <TableRow
        android:id="@+id/km_5_table_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:visibility="gone">

        <TextView
            android:paddingRight="15dp"
            android:text="Time for 5km" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/km_5_time" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>
    
    <TableRow
        android:id="@+id/km_8_table_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:visibility="gone">

        <TextView
            android:paddingRight="15dp"
            android:text="Time for 8km" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/km_8_time" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>
    
    <TableRow
        android:id="@+id/km_10_table_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:visibility="gone">

        <TextView
            android:paddingRight="15dp"
            android:text="Time for 10km" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/km_10_time" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingRight="15dp"
            android:text="@string/stat_ascension" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView android:id="@+id/stat_ascension" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </TableRow>

</TableLayout>