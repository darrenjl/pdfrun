<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileActivity" >

    <TableLayout
        android:id="@+id/profile_table"
        style="@style/Table" >

        <TableRow
            android:id="@+id/profile_header_table_row"
            style="@style/TableHeaderRow"
            android:visibility="gone" >

            <TextView
                style="@style/TableHeaderRowTextView"
                android:text="" />

            <TextView
                style="@style/TableHeaderRowTextView"
                android:text="Best Time" />

            <TextView
                style="@style/TableHeaderRowTextView"
                android:text="Avg. Time" />

            <TextView
                style="@style/TableHeaderRowTextView"
                android:text="" />
        </TableRow>

        <TableRow
            android:id="@+id/km_1_table_row"
            style="@style/TableRow"
            android:visibility="gone" >

            <TextView
                style="@style/TableRowTextView"
                android:text="1km" />

            <TextView
                android:id="@+id/km_1_time"
                style="@style/TableRowTextView"
                android:text="" />

            <TextView
                android:id="@+id/avg_km_1_time"
                style="@style/TableRowTextView"
                android:text="" />

            <ImageView
                android:id="@+id/imageView1"
                style="@style/TableRowImageView"
                android:src="@drawable/medal" />
        </TableRow>

        <TableRow
            android:id="@+id/km_3_table_row"
            style="@style/TableRow"
            android:visibility="gone" >

            <TextView
                style="@style/TableRowTextView"
                android:text="3km" />

            <TextView
                android:id="@+id/km_3_time"
                style="@style/TableRowTextView"
                android:text="" />

            <TextView
                android:id="@+id/avg_km_3_time"
                style="@style/TableRowTextView"
                android:text="" />

            <ImageView
                android:id="@+id/imageView1"
                style="@style/TableRowImageView"
                android:src="@drawable/medal" />
        </TableRow>

        <TableRow
            android:id="@+id/km_5_table_row"
            style="@style/TableRow"
            android:visibility="gone" >

            <TextView
                style="@style/TableRowTextView"
                android:text="5km" />

            <TextView
                android:id="@+id/km_5_time"
                style="@style/TableRowTextView"
                android:text="" />

            <TextView
                android:id="@+id/avg_km_5_time"
                style="@style/TableRowTextView"
                android:text="" />

            <ImageView
                android:id="@+id/imageView1"
                style="@style/TableRowImageView"
                android:src="@drawable/medal" />
        </TableRow>

        <TableRow
            android:id="@+id/km_8_table_row"
            style="@style/TableRow"
            android:visibility="gone" >

            <TextView
                style="@style/TableRowTextView"
                android:text="8km" />

            <TextView
                android:id="@+id/km_8_time"
                style="@style/TableRowTextView"
                android:text="" />

            <TextView
                android:id="@+id/avg_km_8_time"
                style="@style/TableRowTextView"
                android:text="" />

            <ImageView
                android:id="@+id/imageView1"
                style="@style/TableRowImageView"
                android:src="@drawable/medal" />
        </TableRow>

        <TableRow
            android:id="@+id/km_10_table_row"
            style="@style/TableRow"
            android:visibility="gone" >

            <TextView
                style="@style/TableRowTextView"
                android:text="10km" />

            <TextView
                android:id="@+id/km_10_time"
                style="@style/TableRowTextView"
                android:text="" />

            <TextView
                android:id="@+id/avg_km_10_time"
                style="@style/TableRowTextView"
                android:text="" />

            <ImageView
                android:id="@+id/imageView1"
                style="@style/TableRowImageView"
                android:src="@drawable/medal" />
        </TableRow>

        <TableRow style="@style/TableRow" >

            <TextView
                style="@style/TableRowTextViewFooter"
                android:text="Number of Runs" />

            <TextView
                android:id="@+id/numRuns"
                style="@style/TableRowTextViewFooter" />
        </TableRow>

        <TableRow style="@style/TableRow" >

            <TextView
                style="@style/TableRowTextViewFooter"
                android:text="Total distance run" />

            <TextView
                android:id="@+id/totalDistance"
                style="@style/TableRowTextViewFooter" />
        </TableRow>
    </TableLayout>

