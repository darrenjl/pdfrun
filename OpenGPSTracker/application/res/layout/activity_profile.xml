                    style="@style/TableRowTextView"
                    android:text="" />

                <ImageView
                    android:id="@+id/image_3km"
                    style="@style/TableRowImageView"
                    android:src="@drawable/medal" />
            </TableRow>

            <TableRow
                android:id="@+id/km_5_table_row"
                style="@style/TableRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableRowTextView"
                    android:text="@string/distance_5km" />

                <TextView
                    android:id="@+id/km_5_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <TextView
                    android:id="@+id/avg_km_5_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <ImageView
                    android:id="@+id/image_5km"
                    style="@style/TableRowImageView"
                    android:src="@drawable/medal" />
            </TableRow>

            <TableRow
                android:id="@+id/km_8_table_row"
                style="@style/TableRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableRowTextView"
                    android:text="@string/distance_8km" />

                <TextView
                    android:id="@+id/km_8_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <TextView
                    android:id="@+id/avg_km_8_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <ImageView
                    android:id="@+id/image_8km"
                    style="@style/TableRowImageView"
                    android:src="@drawable/medal" />
            </TableRow>

            <TableRow
                android:id="@+id/km_10_table_row"
                style="@style/TableRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableRowTextView"
                    android:text="@string/distance_10km" />

                <TextView
                    android:id="@+id/km_10_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <TextView
                    android:id="@+id/avg_km_10_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <ImageView
                    android:id="@+id/image_10km"
                    style="@style/TableRowImageView"
                    android:src="@drawable/medal" />
            </TableRow>

            <TableRow style="@style/TableRow" >

                <TextView
                    style="@style/TableRowTextViewFooter"
                    android:text="@string/num_runs" />

                <TextView
                    android:id="@+id/numRuns"
                    style="@style/TableRowTextViewFooter" />
            </TableRow>

            <TableRow style="@style/TableRow" >

                <TextView
                    style="@style/TableRowTextViewFooter"
                    android:text="@string/total_distance" />

                <TextView
                    android:id="@+id/totalDistance"
                    style="@style/TableRowTextViewFooter" />
            </TableRow>
        </TableLayout>

