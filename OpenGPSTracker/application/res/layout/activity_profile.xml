<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/profile_table"
            style="@style/Table" >

            <TableRow
                android:id="@+id/profile_header_table_row"
                style="@style/TableHeaderRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="" />

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/best_time" />

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="@string/avg_time" />

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="" />
            </TableRow>

            <TableRow
                android:id="@+id/km_1_table_row"
                style="@style/TableRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableRowTextView"
                    android:text="@string/distance_1km" />

                <TextView
                    android:id="@+id/km_1_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <TextView
                    android:id="@+id/avg_km_1_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <ImageView
                    android:id="@+id/image_1km"
                    style="@style/TableRowImageView"
                    android:src="@drawable/medal" />
            </TableRow>

            <TableRow
                android:id="@+id/km_3_table_row"
                style="@style/TableRow"
                android:visibility="gone" >

                <TextView
                    style="@style/TableRowTextView"
