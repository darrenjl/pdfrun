<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileActivity" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingRight="15dp"
            android:text="Number of Runs" />

        <TextView android:id="@+id/numRuns" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingRight="15dp"
            android:text="Total distance run" />

        <TextView android:id="@+id/totalDistance" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingRight="15dp"
            android:text="Max speed" />

        <TextView android:id="@+id/maxSpeed" />
    </TableRow>
    <TableRow
        android:id="@+id/profile_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <TableLayout style="@style/Table">

            <TableRow
                style="@style/TableHeaderRow" >

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="" />

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="Best Time"/>

                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="Avg. Time" />
                
                <TextView
                    style="@style/TableHeaderRowTextView"
                    android:text="" />
            </TableRow> 
            <TableRow
                style="@style/TableRow"
                android:id="@+id/km_1_table_row"
                android:visibility="gone">

                <TextView
                    android:layout_margin="1dip"
                    android:background="#ffffff"
                    android:text="1km" />

                <TextView
                    android:id="@+id/km_1_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <TextView
                    android:id="@+id/avg_km_1_time"
                    style="@style/TableRowTextView"
                    android:text="" />
                
                <TextView
                    style="@style/TableRowTextView"
                    android:text="" />
            </TableRow> 
            <TableRow
                style="@style/TableRow" 
                android:id="@+id/km_3_table_row"
                android:visibility="gone">

                <TextView
                    style="@style/TableRowTextView"
                    android:text="3km" />

                <TextView
                    android:id="@+id/km_3_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <TextView
                    android:id="@+id/avg_km_3_time"
                    style="@style/TableRowTextView"
                    android:text="" />
                
                <TextView
                    style="@style/TableRowTextView"
                    android:text="" />
            </TableRow>
            <TableRow
                style="@style/TableRow" 
                android:id="@+id/km_5_table_row"
                android:visibility="gone">

                <TextView
                    style="@style/TableRowTextView"
                    android:text="5km" />

                <TextView
                    android:id="@+id/km_5_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <TextView
                    android:id="@+id/avg_km_5_time"
                    style="@style/TableRowTextView"
                    android:text="" />
                
                <TextView
                    style="@style/TableRowTextView"
                    android:text="" />
            </TableRow>  
            <TableRow
                style="@style/TableRow"
                android:id="@+id/km_8_table_row"
                android:visibility="gone">

                <TextView
                    style="@style/TableRowTextView"
                    android:text="8km" />

                <TextView
                    android:id="@+id/km_8_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <TextView
                    android:id="@+id/avg_km_8_time"
                    style="@style/TableRowTextView"
                    android:text="" />
                
                <TextView
                    style="@style/TableRowTextView"
                    android:text="" />
            </TableRow>  
            <TableRow
                style="@style/TableRow" 
                android:id="@+id/km_10_table_row"
                android:visibility="gone">

                <TextView
                    style="@style/TableRowTextView"
                    android:text="10km" />

                <TextView
                    android:id="@+id/km_10_time"
                    style="@style/TableRowTextView"
                    android:text="" />

                <TextView
                    android:id="@+id/avg_km_10_time"
                    style="@style/TableRowTextView"
                    android:text="" />
                
                <TextView
                    style="@style/TableRowTextView"
                    android:text="" />
            </TableRow>           
        </TableLayout>
    </TableRow>

</TableLayout>